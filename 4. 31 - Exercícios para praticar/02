//2. Faça um programa que leia um vetor de 10 posições
//. Conte e mostre quantos valores pares ele possui. 
#include <stdio.h>
int main () {
    int vet[10], par=0;
    for (int i=0; i<10; i++){
        printf ("%i ) informe um número : ", i+1);
        scanf ("%i", &vet[i]);
        if (vet[i]%2==0){
            par++;
        }
    }
    printf ("\n%i valores são pares !", par);
}
