/*1. Crie um programa que tenha uma função recursiva
que receba um número inteiro positivo N e calcula e
apresente o somatório dos números de 1 a N. */

#include <stdio.h>
int soma(int n){
    if (n == 1){
        return 1;
    }
    return soma(n-1) + n;
}

int main () {
    int n;
    printf ("Informe um número : ");
    scanf ("%d", &n);
    
    printf ("O somatório é : %d", soma(n));
}
