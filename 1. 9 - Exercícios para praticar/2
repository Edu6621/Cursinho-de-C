//2. Peça ao usuário para digitar três valores inteiros e imprima a soma deles.
#include <stdio.h>
int main () {
    int a,b,c,s;
    printf ("insira 3 números inteiros :\n");
    scanf ("%i", &a);
    scanf ("%i", &b);
    scanf ("%i", &c);
    s=a+b+c;
    printf ("a soma dos 3 números é %i", s);
}
