//3. Faça um programa que leia 10 números e escreva o maior e o menor valor lido.
#include <stdio.h>
int main (){
    int numero, maior, menor = 0;
    for (int i = 0; i < 10; i++){
        printf ("informe o número %i da lista : \n", i + 1);
        scanf ("%i", &numero);
        
        if (i==0){
            maior=numero;
            menor=numero;
        }
        if (numero > maior){
            maior=numero;
        }
        if (numero < menor){
            menor=numero;
        }
    }    printf ("o menor número é %i e o maior número é %i", menor, maior);
    return 0;
    
}
