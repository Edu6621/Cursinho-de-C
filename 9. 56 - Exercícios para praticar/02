#include <stdio.h>
#include <string.h>

int main () {
    FILE *arq;
    char nmArq[100];
    int linhas = 0;
    char buffer_leitura[1024];

    printf ("Informe o nome do arquivo : ");
    fgets (nmArq, sizeof(nmArq), stdin);
    nmArq[strcspn(nmArq, "\n")] = '\0';

    arq = fopen(nmArq, "r");

    if (arq == NULL) {
        printf("Erro ao abrir o arquivo '%s'\n", nmArq);
        return 1;
    }

    while (fgets(buffer_leitura, sizeof(buffer_leitura), arq) != NULL) {
        linhas++;
    }

    fclose(arq);
    printf ("O arquivo '%s' possui %d linhas.\n", nmArq, linhas);
    return 0;
}
